<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/base_dialog_bg">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="18dp"
        android:textSize="16sp"
        android:textColor="#4F4F4F"
        android:textStyle="bold"
        android:text="发送成功"/>

    <TextView
        android:id="@+id/content_msg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="26dp"
        android:textSize="14sp"
        android:textColor="#979797"
        android:maxLines="3"
        android:ellipsize="end"
        tools:text="在任意第三方app中选中一段文字后点按分享即可发送至flomo在任意第三方app中选中一段文字后点按分享即可发送至flomo在任意第三方app中选中一段文字后点按分享即可发送至flomo在任意第三方app中选中一段文字后点按分享即可发送至flomo在任意第三方app中选中一段文字后点按分享即可发送至flomo在任意第三方app中选中一段文字后点按分享即可发送至flomo"/>

    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:layout_constraintTop_toBottomOf="@id/content_msg"
        android:layout_marginTop="26dp"
        android:background="#E8E8E8"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/divider1">

        <TextView
            android:id="@+id/confirm_button"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:textSize="16sp"
            android:textColor="#00AFFF"
            android:text="知道了"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>